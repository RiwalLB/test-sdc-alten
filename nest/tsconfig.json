{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2022",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,

        /**
         * Toutes les règles ci-dessous doivent être appliquées à tous les
         * projets NestJS du périmètre Alvis, sauf exception.
         * Chaque exception doit être accompagnée d'une mention explicative
         * et la règle doit être désactivée, et non supprimée
         */

        // Strict
        "strict": true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictBindCallApply": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "useUnknownInCatchVariables": true,

        // No ununsed code
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "allowUnusedLabels": false,
        "allowUnreachableCode": false,

        // No implicit code
        "noImplicitOverride": true,
        "noImplicitReturns": true,

        // Others
        "noUncheckedIndexedAccess": true,
        "noPropertyAccessFromIndexSignature": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,

        // "exactOptionalPropertyTypes" n'est pour le moment pas compatible
        // avec le client Prisma généré. À retester lorsque cette issue sera fixée
        // https://github.com/prisma/prisma/issues/10894
        "exactOptionalPropertyTypes": false
    }
}
